
<section>
    <h2>Sign In</h2>
    <% if (message) { %>
        <p><%= message %></p>
    <% } %>
    <form action="/user/signin" method="post">
        <input type="email" name="email" placeholder="Email" required><br>
        <input type="password" name="password" placeholder="Password" required><br><br>
        <div class="g-recaptcha" data-sitekey="6LcmRHQpAAAAAKox1CmxwgV0Cbh03cU1MTc4si2g"></div>
        <br/>
        <button type="submit">Sign In</button>
    </form>
    <br>
    <!-- Sign-in Google Auth -->
    <a href="/auth/google">Sign In with Google</a> &nbsp&nbsp

    <a href="/user/forgot-password">Forgot Password?</a>
    <!-- Link to forgot password page -->
    <p>Don't have an account? <a href="/user/signup">Sign up</a></p>
    

</section>
<style>
    section {
        width: 100%;
        max-width: 400px;
        margin: 50px auto;
        padding: 30px;
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        font-family: "Poppins", sans-serif;
    }

    input {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 1rem;
    }


    button {
        width: 100%;
        background: #2a5298;
        color: white;
        border: none;
        padding: 12px;
        margin-top: 10px;
        border-radius: 5px;
        font-size: 1rem;
        cursor: pointer;
        transition: 0.3s ease;
    }

    button:hover {
        background: #1e3c72;
    }
    .google-btn {
        display: block;
        background: #db4437;
        color: white;
        padding: 10px;
        margin-top: 10px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 1rem;
    }

    .google-btn:hover {
        background: #c1351d;
    }
    .forgot-link, p a {
        color: #2a5298;
        text-decoration: none;
        font-weight: bold;
    }

    .forgot-link:hover, p a:hover {
        text-decoration: underline;
    }
    .message {
        color: red;
        font-size: 0.9rem;
        margin-bottom: 10px;
    }
    .captcha {
        margin: 15px 0;
    }
</style>
